<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20sp"
    tools:context=".MainActivity1yes">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp"
        android:text="@string/perhitungan_luas_dan_keliling_bangun_datar"
        android:textAlignment="center"
        android:textSize="35sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingBottom="5sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageButton
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/pesegipanjang_gambar"
        />
    <ImageButton
        android:id="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/lingkaran_gambar"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_move_persegiPanjang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Persegi Panjang"

            android:textAlignment="center"
            android:layout_marginRight="20sp"
            />
        <Button
            android:id="@+id/btn_move_lingkaran"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Lingkaran"
            android:layout_weight="1"
            android:textAlignment="center"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30sp">

        <ImageButton
            android:id="@+id/btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/segitiga_gambar"
            />
        <ImageButton
            android:id="@+id/btn_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/persegi_gambar"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_move_segitiga"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Segitiga"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginRight="20sp"
            />
        <Button
            android:id="@+id/btn_move_persegi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Persegi"
            android:layout_weight="1"
            android:textAlignment="center"/>


    </LinearLayout>

</LinearLayout>